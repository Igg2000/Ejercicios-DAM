<Window x:Class="Tema4Ejercicio1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema4Ejercicio1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Color x:Key="gradientazulblanco">White</Color>
    </Window.Resources>
    <Grid>
        <StackPanel HorizontalAlignment="Center" Height="261" VerticalAlignment="Center" Width="447">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FF28B3F6" Offset="0.478"/>
                    <GradientStop Color="#FFE5E5E5" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <Label x:Name="Label1" Content="Label1" HorizontalAlignment="Center" Height="72" Width="263" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="Botón1" Content="Botón1" HorizontalAlignment="Center" Height="54" Width="270">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF28B3F6" Offset="0"/>
                        <GradientStop Color="#FFACE2FC" Offset="0.511"/>
                        <GradientStop Color="#FF28B3F6" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
            <Label x:Name="Label2" Content="Label2" HorizontalAlignment="Center" Height="68" Width="263" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="Botón2" Content="Botón2" HorizontalAlignment="Center" Height="54" Width="270">
                <Button.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF28B3F6" Offset="0"/>
                        <GradientStop Color="#FFACE2FC" Offset="0.511"/>
                        <GradientStop Color="#FF28B3F6" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </StackPanel>

    </Grid>
</Window>
