<Window x:Class="Calculadora.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculadora"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="368" Stroke="Black" VerticalAlignment="Center" Width="492" Fill="#FFC64848" Margin="100,0,0,0"/>
        <TextBox x:Name="pantalla" HorizontalAlignment="Left" Height="31" Margin="167,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" FontSize="18" IsReadOnly="True"/>
        <Button Content="7" HorizontalAlignment="Left" Height="50" Margin="167,140,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b7"/>
        <Button Content="8" HorizontalAlignment="Left" Height="50" Margin="244,140,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b8"/>
        <Button Content="9" HorizontalAlignment="Left" Height="50" Margin="321,140,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b9"/>
        <Button Content="4" HorizontalAlignment="Left" Height="50" Margin="167,196,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b4"/>
        <Button Content="5" HorizontalAlignment="Left" Height="50" Margin="244,197,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b5"/>
        <Button Content="6" HorizontalAlignment="Left" Height="50" Margin="321,197,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b6"/>
        <Button Content="3" HorizontalAlignment="Left" Height="50" Margin="321,254,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b3"/>
        <Button Content="2" HorizontalAlignment="Left" Height="50" Margin="244,254,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b2"/>
        <Button Content="1" HorizontalAlignment="Left" Height="50" Margin="167,254,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b1" RenderTransformOrigin="0.562,0.609"/>
        <Button Content="x" HorizontalAlignment="Left" Height="55" Margin="416,214,0,0" VerticalAlignment="Top" Width="51" FontWeight="Bold" FontSize="36" Click="bMultiplicar"/>
        <Button Content="/" HorizontalAlignment="Left" Height="55" Margin="489,214,0,0" VerticalAlignment="Top" Width="52" FontWeight="Bold" FontSize="36" Click="bDividir"/>
        <Button Content="," HorizontalAlignment="Left" Height="50" Margin="244,314,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="bComa"/>
        <Button Content="C" HorizontalAlignment="Left" Height="50" Margin="321,309,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="bBorrar"/>
        <Button Content="+" HorizontalAlignment="Left" Height="55" Margin="416,149,0,0" VerticalAlignment="Top" Width="51" FontWeight="Bold" FontSize="36" Click="bsumar"/>
        <Button Content="-" HorizontalAlignment="Left" Height="55" Margin="489,149,0,0" VerticalAlignment="Top" Width="52" FontWeight="Bold" FontSize="36" Click="bRestar"/>
        <Button Content="=" HorizontalAlignment="Left" Height="55" Margin="416,285,0,0" VerticalAlignment="Top" Width="125" FontWeight="Bold" FontSize="36" Click="bresultado"/>
        <Button x:Name="b0" Content="0" HorizontalAlignment="Left" Height="50" Margin="167,314,0,0" VerticalAlignment="Top" Width="50" FontWeight="Bold" FontSize="36" Click="b0" RenderTransformOrigin="0.562,0.609"/>

    </Grid>
</Window>
