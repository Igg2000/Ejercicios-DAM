<Window x:Class="Tema_4_v2_Ejercicio_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema_4_v2_Ejercicio_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <ComboBox x:Name="ColorComboBox" Width="200" SelectionChanged="ColorComboBox_SelectionChanged" FontWeight="Bold" FontSize="14">
                <ComboBoxItem Content="Red" Background="Red"/>
                <ComboBoxItem Content="Green" Background="Green"/>
                <ComboBoxItem Content="Blue" Background="Blue"/>
                <ComboBoxItem Content="Yellow" Background="Yellow"/>
            </ComboBox>

            <TextBox x:Name="ColorTextBox" Width="200" Height="30" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
